<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.albedo.java.modules.sys.repository.DeptRepository">


	<!--关联查询部门列表-->
	<select id="findDeptList" resultType="com.albedo.java.modules.sys.domain.Dept">
		SELECT
			t.*
		FROM
			sys_dept t
		LEFT JOIN sys_dept_relation dr ON t.id = dr.descendant
		WHERE dr.ancestor = 0
	</select>

	<select id="findDeptVoList" resultType="com.albedo.java.modules.sys.domain.vo.DeptVo">
		SELECT
		*
		FROM
		sys_dept
		<where>
			${ew.sqlSegment}
		</where>
	</select>
</mapper>
